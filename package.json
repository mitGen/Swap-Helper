{
  "name": "test-task-contracts",
  "version": "1.0.0",
  "license": "BUSL-1.1",
  "private": true,
  "scripts": {
    "clean": "hardhat clean",
    "clean:deployments": "hardhat clean-deployments",
    "compile": "hardhat compile --force",
    "hh:node": "hardhat node",
    "test": "forge test",
    "coverage": "forge coverage",
    "coverage:report": "forge coverage --report lcov && genhtml lcov.info --output-dir tests/coverage",
    "gas-reporter": "ENABLE_GAS_REPORT=true hardhat test",
    "contract-sizer": "yarn run hardhat size-contracts",
    "lint": "yarn lint:ts && yarn lint:sol",
    "lint:fix": "yarn lint:ts:fix && yarn lint:sol:fix",
    "lint:ts": "eslint --ext .ts .",
    "lint:ts:fix": "eslint --ext .ts . --fix",
    "lint:sol": "solhint -f table '{contracts,tests}/**/*.sol' && prettier --check '{contracts,tests}/**/*.sol'",
    "lint:sol:fix": "prettier --write '{contracts,tests}/**/*.sol'",
    "migrate": "hardhat deploy --network",
    "verify": "hardhat verify-by-name --network"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-verify": "^2.0.4",
    "@openzeppelin/contracts": "^5.0.1"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "4.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": ">=12.0.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "bignumber.js": "^9.1.1",
    "chai": "^4.2.0",
    "config": "^3.3.8",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "ethers": "5.7.2",
    "hardhat": "2.20.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.37",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-watcher": "^2.5.0",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.1.0",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": ">=8.0.0",
    "tsconfig-paths": "^4.1.1",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  }
}
